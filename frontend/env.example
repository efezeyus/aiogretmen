# =============================================================================
# Yapay Zeka Öğretmen - Frontend Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_WEBSOCKET_URL=ws://localhost:8000/ws

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development
NODE_ENV=development

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
REACT_APP_ENABLE_VOICE_FEATURES=true
REACT_APP_ENABLE_SOCIAL_FEATURES=true
REACT_APP_ENABLE_GAMIFICATION=true
REACT_APP_ENABLE_ADMIN_PANEL=true
REACT_APP_ENABLE_FILE_UPLOAD=true

# -----------------------------------------------------------------------------
# UI Configuration
# -----------------------------------------------------------------------------
REACT_APP_THEME=light
REACT_APP_LANGUAGE=tr
REACT_APP_TIMEZONE=Europe/Istanbul
REACT_APP_ANIMATIONS=true

# -----------------------------------------------------------------------------
# Performance & Security
# -----------------------------------------------------------------------------
REACT_APP_CACHE_DURATION=300
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_REQUEST_TIMEOUT=30000
REACT_APP_RETRY_ATTEMPTS=3
REACT_APP_AUTO_LOGOUT_MINUTES=60
REACT_APP_CSRF_PROTECTION=true

# -----------------------------------------------------------------------------
# External Services (Optional)
# -----------------------------------------------------------------------------
REACT_APP_GOOGLE_CLIENT_ID=
REACT_APP_FACEBOOK_APP_ID=
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------
REACT_APP_MOCK_API=false
REACT_APP_BUILD_DATE=
